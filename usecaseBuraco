@startuml
left to right direction
skinparam packageStyle rectangle

actor Usuario as "Usuário"
actor Aplicativo as "Aplicativo CIDADE ONLINE"

rectangle "Caso de Uso" {
  Usuario --> (Abrir Aplicativo)
  Usuario --> (Tirar Foto do Problema)
  Usuario --> (Enviar Foto)
  Usuario --> (Visualizar Resposta)

  (Abrir Aplicativo) --> (Direcionar para Aba de Rede Social)
  (Tirar Foto do Problema) --> (Enviar Foto)
  (Enviar Foto) --> (Registrar Problema de Infraestrutura)
  (Visualizar Resposta) --> (Criar Publicação)
  (Visualizar Resposta) --> (Anexar à Publicação Existente)

  (Registrar Problema de Infraestrutura) --> (Encaminhar para Órgão Responsável)

  (Criar Publicação) --> (Anexar Foto)
}

@enduml
